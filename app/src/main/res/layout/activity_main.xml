<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="15dp"
        android:layout_marginBottom="8dp">
        <TextView android:id="@+id/tv_lsp_status" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="LSP" android:textColor="#FF0000" android:gravity="center" android:textSize="15sp" android:textStyle="bold"/>
        <TextView android:id="@+id/tv_hook_status" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="注入" android:textColor="#FF0000" android:gravity="center" android:textSize="15sp" android:textStyle="bold"/>
        <TextView android:id="@+id/tv_service_status" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="服务" android:textColor="#FF0000" android:gravity="center" android:textSize="15sp" android:textStyle="bold"/>
        <TextView android:id="@+id/tv_ipc_status" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="链路" android:textColor="#FF0000" android:gravity="center" android:textSize="15sp" android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="基础控制" android:textColor="#888888" android:textSize="12sp" android:gravity="center_horizontal" android:layout_marginBottom="4dp"/>
            
            <Button 
                android:id="@+id/btn_start_service" 
                android:layout_width="match_parent" 
                android:layout_height="50dp" 
                android:text="1.冷启动服务" 
                android:textSize="15sp"
                android:backgroundTint="#0288D1" 
                android:layout_marginBottom="6dp"/>
            
            <Button 
                android:id="@+id/btn_force_connect" 
                android:layout_width="match_parent" 
                android:layout_height="50dp" 
                android:text="2.暴力重连" 
                android:textSize="15sp"
                android:backgroundTint="#D81B60" 
                android:layout_marginBottom="12dp"/>

            <Button 
                android:id="@+id/btn_activate" 
                android:layout_width="match_parent" 
                android:layout_height="60dp" 
                android:text="3.激活仪表" 
                android:textSize="15sp"
                android:textStyle="bold"
                android:backgroundTint="#009688" 
                android:layout_marginBottom="12dp"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="身份轮询控制 (Vendor)" android:textColor="#888888" android:textSize="12sp" android:gravity="center_horizontal" android:layout_marginBottom="4dp"/>
            
            <Button 
                android:id="@+id/btn_vendor_auto" 
                android:layout_width="match_parent" 
                android:layout_height="45dp" 
                android:text="自动轮询" 
                android:textSize="15sp"
                android:backgroundTint="#673AB7" 
                android:layout_marginBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <Button 
                    android:id="@+id/btn_vendor_1" 
                    android:layout_width="0dp" 
                    android:layout_height="45dp" 
                    android:layout_weight="1" 
                    android:text="锁 V1" 
                    android:textSize="15sp"
                    android:backgroundTint="#555555" 
                    android:layout_marginEnd="3dp"/>

                <Button 
                    android:id="@+id/btn_vendor_4" 
                    android:layout_width="0dp" 
                    android:layout_height="45dp" 
                    android:layout_weight="1" 
                    android:text="锁 V4" 
                    android:textSize="15sp"
                    android:backgroundTint="#555555" 
                    android:layout_marginStart="3dp"/>
            </LinearLayout>

            <android.widget.Space android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
            
            <Button 
                android:id="@+id/btn_save_log" 
                android:layout_width="match_parent" 
                android:layout_height="45dp" 
                android:text="保存日志" 
                android:textSize="15sp"
                android:backgroundTint="#444444"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="#111111"
            android:fillViewport="true">
            
            <TextView 
                android:id="@+id/tv_log" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:textColor="#00FF00" 
                android:padding="12dp" 
                android:textSize="14sp" 
                android:lineSpacingExtra="4dp"
                android:fontFamily="monospace" 
                android:text="--- 系统就绪 (V46 Large UI) ---\n"/>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
