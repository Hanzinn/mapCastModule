<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="10dp"
        android:layout_marginBottom="8dp">
        
        <TextView 
            android:id="@+id/tv_lsp_status" 
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="1" 
            android:text="LSP" 
            android:textColor="#FF0000" 
            android:gravity="center" 
            android:textSize="14sp" 
            android:textStyle="bold"/>
            
        <TextView 
            android:id="@+id/tv_hook_status" 
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="1" 
            android:text="服务Hook" 
            android:textColor="#FF0000" 
            android:gravity="center" 
            android:textSize="14sp" 
            android:textStyle="bold"/>
            
        <TextView 
            android:id="@+id/tv_ipc_status" 
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="1" 
            android:text="IPC链路" 
            android:textColor="#FF0000" 
            android:gravity="center" 
            android:textSize="14sp" 
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="vertical">
        
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="5dp">
            <Button android:id="@+id/btn_v0" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="V0" android:textSize="12sp" android:backgroundTint="#555555" android:layout_marginEnd="2dp"/>
            <Button android:id="@+id/btn_v4" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="V4" android:textSize="12sp" android:backgroundTint="#555555" android:layout_marginEnd="2dp"/>
            <Button android:id="@+id/btn_v5" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="V5" android:textSize="12sp" android:backgroundTint="#555555" android:layout_marginEnd="2dp"/>
            <Button android:id="@+id/btn_v10" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="V10" android:textSize="12sp" android:backgroundTint="#555555"/>
        </LinearLayout>

        <Button 
            android:id="@+id/btn_force_connect" 
            android:layout_width="match_parent" 
            android:layout_height="50dp" 
            android:text="强制连接 (自动握手)" 
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#009688"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#111111"
            android:fillViewport="true">
            <TextView 
                android:id="@+id/tv_log" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:textColor="#00FF00" 
                android:padding="12dp" 
                android:textSize="13sp" 
                android:lineSpacingExtra="3dp"
                android:fontFamily="monospace" 
                android:text="等待日志..." />
        </ScrollView>
        
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:layout_marginTop="5dp">
            
            <Button 
                android:id="@+id/btn_save_log" 
                android:layout_width="0dp" 
                android:layout_height="50dp" 
                android:layout_weight="1"
                android:text="保存日志" 
                android:backgroundTint="#444444"
                android:layout_marginEnd="5dp"/>
                
            <Button 
                android:id="@+id/btn_close" 
                android:layout_width="0dp" 
                android:layout_height="50dp" 
                android:layout_weight="1"
                android:text="关闭APP" 
                android:textColor="#FFFFFF"
                android:backgroundTint="#B71C1C"/>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>