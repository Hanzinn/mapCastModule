<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="15dp"
        android:layout_marginBottom="15dp">
        
        <TextView 
            android:id="@+id/tv_status_lsp" 
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="1" 
            android:text="LSP: 未激活" 
            android:textColor="#FF0000" 
            android:gravity="center" 
            android:textStyle="bold"/>
            
        <TextView 
            android:id="@+id/tv_status_hook" 
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="1" 
            android:text="Hook: 等待" 
            android:textColor="#FFFF00" 
            android:gravity="center" 
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button 
            android:id="@+id/btn_start" 
            android:layout_width="0dp" 
            android:layout_height="70dp" 
            android:layout_weight="1"
            android:text="开启投屏" 
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#1B5E20" 
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp"/>
            
        <Button 
            android:id="@+id/btn_stop" 
            android:layout_width="0dp" 
            android:layout_height="70dp" 
            android:layout_weight="1"
            android:text="关闭投屏" 
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#B71C1C" 
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="运行日志 (自动滚动):"
        android:textColor="#888888"
        android:textSize="12sp"/>

    <ScrollView 
        android:id="@+id/scroll_log"
        android:layout_width="match_parent" 
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#121212"
        android:padding="5dp"
        android:fillViewport="true">
        <TextView 
            android:id="@+id/tv_log" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:textColor="#00FF00" 
            android:textSize="11sp" 
            android:fontFamily="monospace" 
            android:text="V136 准备就绪..." />
    </ScrollView>
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal" 
        android:layout_marginTop="10dp">
        
        <Button 
            android:id="@+id/btn_save" 
            android:layout_width="0dp" 
            android:layout_height="50dp" 
            android:layout_weight="1"
            android:text="保存日志" 
            android:backgroundTint="#424242"
            android:layout_marginEnd="5dp"/>
            
        <Button 
            android:id="@+id/btn_kill" 
            android:layout_width="0dp" 
            android:layout_height="50dp" 
            android:layout_weight="1"
            android:text="清除退出" 
            android:textColor="#FFFFFF"
            android:backgroundTint="#616161"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
</LinearLayout>
